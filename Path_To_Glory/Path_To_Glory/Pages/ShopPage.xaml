        <Border BorderBrush="White" BorderThickness="5" Grid.Row="1" Grid.Column="7" Grid.RowSpan="5" Grid.ColumnSpan="5">
            <Canvas>
                <Canvas.Background>
                    <SolidColorBrush Color="Gray"></SolidColorBrush>
                </Canvas.Background>
            </Canvas>
        </Border>
        <Border BorderBrush="White" BorderThickness="5" Grid.Row="1" Grid.Column="13" Grid.RowSpan="5" Grid.ColumnSpan="5">
            <Canvas>
                <Canvas.Background>
                    <SolidColorBrush Color="Gray"></SolidColorBrush>
                </Canvas.Background>
            </Canvas>
        </Border>
        <Border BorderBrush="White" BorderThickness="5" Grid.Row="7" Grid.Column="1" Grid.RowSpan="5" Grid.ColumnSpan="5">
            <Canvas>
                <Canvas.Background>
                    <SolidColorBrush Color="Gray"></SolidColorBrush>
                </Canvas.Background>
            </Canvas>
        </Border>
        <Border BorderBrush="White" BorderThickness="5" Grid.Row="7" Grid.Column="7" Grid.RowSpan="5" Grid.ColumnSpan="5">
